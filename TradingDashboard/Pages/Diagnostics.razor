@inject HttpClient Http
@using TradingDashboard.Model
@using TradingDashboard.Models
<h3>System Diagnostics</h3>

@if (Diagnostic is null)
{
    <p>Loading diagnostics...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Metric</th>
                <th>Value</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Diagnostic)
            {
                <tr class="@GetRowClass(item.Status)">
                    <td>@item.Name</td>
                    <td>@item.Value</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<DiagnosticItem>? Diagnostic;

    protected override async Task OnInitializedAsync()
    {
        Diagnostic = await Http.GetFromJsonAsync<List<DiagnosticItem>>("api/diagnostics");
    }

    private string GetRowClass(string status) => status switch
    {
        "Healthy" => "table-success",
        "Warning" => "table-warning",
        "Critical" => "table-danger",
        _ => ""
    };


}