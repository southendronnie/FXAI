@using TradingDashboard.Models
@using TradingDashboard.Models

<select @onchange="OnChange">
    @foreach (var strategy in Strategies)
    {
        <option value="@strategy.Id">@strategy.Name</option>
    }
</select>

@code {
    [Parameter] public EventCallback<string> OnStrategySelected { get; set; }

    private List<StrategyProfile> Strategies = new()
    {
        new StrategyProfile { Id = "meanrev", Name = "Mean Reversion" },
        new StrategyProfile { Id = "momentum", Name = "Momentum" },
        new StrategyProfile { Id = "breakout", Name = "Breakout" }
    };

    private async Task OnChange(ChangeEventArgs e)
    {
        var selectedId = e.Value?.ToString();
        if (!string.IsNullOrEmpty(selectedId))
            await OnStrategySelected.InvokeAsync(selectedId);
    }
}