@inject HttpClient Http

<h3>Pattern Stats Summary</h3>

@if (Stats is null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Pattern</th>
                <th>Occurrences</th>
                <th>Win Rate</th>
                <th>Avg Profit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stat in Stats.OrderByDescending(s => s.WinRate))
            {
                <tr>
                    <td>@stat.PatternName</td>
                    <td>@stat.Occurrences</td>
                    <td>@($"{stat.WinRate:P1}")</td>
                    <td>@($"{stat.AvgProfit:F2}")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<PatternStat>? Stats;

    protected override async Task OnInitializedAsync()
    {
        Stats = await Http.GetFromJsonAsync<List<PatternStat>>("api/patterns/stats");
    }

    public class PatternStat
    {
        public string PatternName { get; set; } = string.Empty;
        public int Occurrences { get; set; }
        public double WinRate { get; set; }
        public double AvgProfit { get; set; }
    }
}